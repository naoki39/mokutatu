<% if current_user.id == @user.id %>
<%= link_to image_tag(current_user.image.variant(resize: '500x500'),class: "mypage_user_icon"), user_path(current_user.id) %>
    <%= current_user.nickname %>
    <%= current_user.goal %>
    <%= current_user.second_goal %>
    <%= current_user.to_do %>
<% else %>
<%= link_to image_tag(@user.image.variant(resize: '500x500'),class: "mypage_user_icon"), user_path(@user.id) %>
    <%= @user.nickname %>
    <%= @user.goal %>
    <%= @user.second_goal %>
    <%= @user.to_do %>
<% end %>